#---------------------------------------------------------------------------
# Set up for cwd
#---------------------------------------------------------------------------
CWDCPPFLAGS = $$(pkg-config --cflags-only-other libcwd_r
CWDINCDIR   = $$(pkg-config --cflags-only-I libcwd_r)
CWDLIBDIR   =
CWDLIB      = $$(pkg-config --libs libcwd_r)

#---------------------------------------------------------------------------
# Set up for Qt
#---------------------------------------------------------------------------
QT_PKGS := QtXmlPatterns QtXml QtNetwork QtSql QtGui QtCore
QTINCDIR = $$(pkg-config --cflags $(QT_PKGS))
QTLIBDIR =
QTLIB    = $$(pkg-config --libs $(QT_PKGS))

#---------------------------------------------------------------------------
# Set up for Qwt
#---------------------------------------------------------------------------
QWTINCDIR = -I/usr/include/qwt5
QWTLIBDIR =
QWTLIB    = -lqwt

#---------------------------------------------------------------------------
# Set up for Xerces
#---------------------------------------------------------------------------
XERCESINCDIR = -I/usr/include/xercesc
XERCESLIBDIR =
XERCESLIB    = -lxerces-c

#---------------------------------------------------------------------------
# Set up for naif
#---------------------------------------------------------------------------

NAIFINCDIR = -I/usr/include/cspice
NAIFLIBDIR =
NAIFLIB    = -lcspice

#---------------------------------------------------------------------------
# Set up for TNT
#---------------------------------------------------------------------------
TNTINCDIR = -I/usr/include/tnt
TNTLIBDIR =
TNTLIB    =

#---------------------------------------------------------------------------
# Set up for JAMA
#---------------------------------------------------------------------------
JAMAINCDIR = -I/usr/include/jama
JAMALIBDIR =
JAMALIB    =

#---------------------------------------------------------------------------
# Set up for GEOS
#---------------------------------------------------------------------------
GEOSINCDIR = -I/usr/include/geos
GEOSLIBDIR =
GEOSLIB    = -lgeos

#---------------------------------------------------------------------------
# Set up for the GNU Scientific Library (GSL).
#---------------------------------------------------------------------------
GSLINCDIR = $$(pkg-config --cflags gsl)
GSLLIBDIR =
GSLLIB    = $$(pkg-config --libs gsl)

#---------------------------------------------------------------------------
# Set up for GMM
#---------------------------------------------------------------------------
GMMINCDIR = -I/usr/include/gmm
GMMLIBDIR =
GMMLIB    =

#---------------------------------------------------------------------------
# Set up for SuperLU
#---------------------------------------------------------------------------
SUPERLUINCDIR = -I/usr/include/superlu
SUPERLULIBDIR =
SUPERLULIB    = -lsuperlu
