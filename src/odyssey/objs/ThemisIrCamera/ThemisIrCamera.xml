<?xml version="1.0" encoding="UTF-8"?>

<class name="IsisThemisIrCamera" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="http://isis.astrogeology.usgs.gov/Schemas/Object/object.xsd">

  <brief>Camera model for Themis IR instrument </brief>
  <description>
    This class handles the camera model for the Odyssey Themis IR 
    instrument.  To create an IsisThemisIrCamera object use
    the IsisCameraManager class and invoke the Camera method passing
    in a Themis IR cube.
  </description>

  <history>
    <change name="Jim Torson" date="2002-01-31">
      Original Version
    </change>
    <change name="Jeff Anderson" date="2004-04-02">
      Converted to Isis 3.0
    </change>
  </history>

  <includes>
    <item>IsisThemisIrCamera.h</item>
  </includes>

  <category>
    <missionItem>Mars Odyssey</missionItem>
  </category>

  <inherits>
    <internalClass>IsisLineScanCamera</internalClass>
    <internalClass>IsisCamera</internalClass>
    <internalClass>IsisSensor</internalClass>
    <internalClass>IsisSpice</internalClass>
  </inherits>

  <public>
    <function name="IsisThemisIrCamera" type="constructor">
      <description>
        Constructs a camera model for the Odyssey Themis IR
        camera
      </description>

      <argumentList>
        <argument name="lab">
          <type>IsisPvl &amp;</type>
            <description>
              A PVL object containing valid Themis Ir cube 
            </description>
        </argument>
      </argumentList>
    </function>

    <function name="~IsisThemisIrCamera" type="destructor">
      <description>
        Destroys the object
      </description>
    </function>
  </public>
</class>
